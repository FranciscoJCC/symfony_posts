{% extends 'base.html.twig' %}

{% block title %}Formulario 3{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-center">Formulario v3</h1>

    {# {{ form(form) }} #}
    {# 
        , {
            'action': 'procesar',
            'method': 'GET',
            'attr': { 'novalidate': 'novalidate' }
        }
     #}
    {% form_theme form 'bootstrap_5_horizontal_layout.html.twig' %}
    {{ form_start(form) }}

        {{ form_errors(form) }} {# Coleccion de errores #}
    
        {{ form_row(form.message, {
            'label': 'Comentario o sugerencia',
            'attr': { 'maxlength' : 10 }
        }) }}

        <div>
            {{ form_errors(form.email) }} {# Error en especifico #}
            {{ form_row(form.email) }}
        </div>
        

    {{ form_end(form)}}
</div>
{% endblock %}
